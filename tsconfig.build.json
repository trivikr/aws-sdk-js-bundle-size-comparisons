{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "target": "ES2018",
    "module": "es6",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": true
  },
  "exclude": ["node_modules", "dist"]
}
